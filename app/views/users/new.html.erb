<% provide :title, "Sign up" %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |current_form| %>
      <%= render 'shared/error_messages'%>

      <%= current_form.label :name %>
      <%= current_form.text_field :name, class: 'form-control' %>

      <%= current_form.label :email %>
      <%= current_form.email_field :email, class: 'form-control' %>

      <%= current_form.label :password %>
      <%= current_form.password_field :password, class: 'form-control' %>

      <%= current_form.label :password_confirmation, "Confirmation" %>
      <%= current_form.password_field :password_confirmation, class: 'form-control' %>

      <%= current_form.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
